<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/calendarConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="25sp"
            android:textColor="@color/white"
            android:id="@+id/textView24hrs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/next_24_hours"
            android:textAlignment="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="15sp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:id="@+id/textViewPrograms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/programs"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="@+id/textView24hrs"
            app:layout_constraintHorizontal_bias="0.017"
            app:layout_constraintStart_toStartOf="@+id/textView24hrs"
            app:layout_constraintTop_toBottomOf="@+id/textView24hrs"/>
        <Button
            android:id="@+id/buttonAddProgram"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/add_program"
            android:textAlignment="center"
            android:backgroundTint="#434343"
            app:icon="@drawable/stepper_control_plus_btn_active"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:layout_constraintEnd_toEndOf="@+id/textViewPrograms"
            app:layout_constraintStart_toStartOf="@+id/textViewPrograms"
            app:layout_constraintTop_toBottomOf="@+id/textViewPrograms"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
