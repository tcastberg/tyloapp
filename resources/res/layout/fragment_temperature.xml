<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tempConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/buttonSaveFav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/save_as_favorite"
            android:textAlignment="center"
            android:backgroundTint="#434343"
            app:layout_constraintEnd_toEndOf="@+id/buttonStopAfter"
            app:layout_constraintStart_toStartOf="@+id/buttonStopAfter"
            app:layout_constraintTop_toBottomOf="@+id/buttonStopAfter"/>
        <Button
            android:id="@+id/buttonTemp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/temperature"
            android:drawableEnd="@drawable/chevron_right"
            android:textAlignment="textStart"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#434343"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <Button
            android:id="@+id/buttonHumidity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/humidity"
            android:drawableEnd="@drawable/chevron_right"
            android:textAlignment="textStart"
            android:backgroundTint="#434343"
            app:layout_constraintEnd_toEndOf="@+id/buttonTemp"
            app:layout_constraintStart_toStartOf="@+id/buttonTemp"
            app:layout_constraintTop_toBottomOf="@+id/buttonTemp"/>
        <Button
            android:id="@+id/buttonStopAfter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/stop_after"
            android:drawableEnd="@drawable/chevron_right"
            android:textAlignment="textStart"
            android:backgroundTint="#434343"
            app:layout_constraintEnd_toEndOf="@+id/buttonTemp"
            app:layout_constraintStart_toStartOf="@+id/buttonTemp"
            app:layout_constraintTop_toBottomOf="@+id/buttonHumidity"/>
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:textColor="@color/white"
            android:id="@+id/switchLight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/lighting"
            app:layout_constraintEnd_toEndOf="@+id/buttonSaveFav"
            app:layout_constraintStart_toStartOf="@+id/buttonSaveFav"
            app:layout_constraintTop_toBottomOf="@+id/buttonSaveFav"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/saveAsFavConstraint"
            android:background="@drawable/custom_border"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:layout_marginTop="16dp"
            android:translationZ="10dp"
            android:backgroundTint="#434343"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <Button
                android:textSize="30sp"
                android:id="@+id/buttonClose"
                android:layout_width="90dp"
                android:layout_height="73dp"
                android:contentDescription="@string/close"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="?android:attr/borderlessButtonStyle"/>
            <Button
                android:textSize="30sp"
                android:id="@+id/buttonSave"
                android:layout_width="90dp"
                android:layout_height="73dp"
                android:contentDescription="@string/save"
                android:drawableEnd="@drawable/top_bar_icon_save"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="?android:attr/borderlessButtonStyle"/>
            <EditText
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:gravity="center"
                android:id="@+id/favEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:minHeight="48dp"
                android:hint="@string/name_your_favorite"
                android:inputType="text"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:autofillHints="@string/name_your_favorite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
