<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/editSetBathTimeConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="25sp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:id="@+id/textViewReadyAtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/ready_at"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/buttonSave"
            app:layout_constraintStart_toEndOf="@+id/buttonClose"
            app:layout_constraintTop_toTopOf="parent"/>
        <Button
            android:textSize="30sp"
            android:id="@+id/buttonClose"
            android:layout_width="103dp"
            android:layout_height="76dp"
            android:contentDescription="@string/close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:textSize="30sp"
            android:id="@+id/buttonSave"
            android:layout_width="90dp"
            android:layout_height="73dp"
            android:contentDescription="@string/save"
            android:drawableEnd="@drawable/top_bar_icon_save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/buttonIncreaseHour"
            android:layout_width="81dp"
            android:layout_height="77dp"
            android:layout_marginTop="188dp"
            android:contentDescription="@string/plus_hour"
            android:drawableEnd="@drawable/increase_time"
            android:layout_marginEnd="86dp"
            android:backgroundTint="#434343"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:layout_gravity="center"
            android:id="@+id/buttonIncreaseMin"
            android:layout_width="81dp"
            android:layout_height="77dp"
            android:layout_marginTop="188dp"
            android:contentDescription="@string/plus"
            android:drawableEnd="@drawable/increase_time"
            android:backgroundTint="#434343"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonIncreaseAm"
            app:layout_constraintStart_toEndOf="@+id/buttonIncreaseHour"
            app:layout_constraintTop_toTopOf="parent"
            style="?android:attr/borderlessButtonStyle"/>
        <TextView
            android:textSize="20sp"
            android:textColor="@color/white"
            android:id="@+id/textViewHourValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/_1"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/buttonIncreaseHour"
            app:layout_constraintStart_toStartOf="@+id/buttonIncreaseHour"
            app:layout_constraintTop_toBottomOf="@+id/buttonIncreaseHour"/>
        <TextView
            android:textColor="@color/white"
            android:id="@+id/textViewColon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/colon"
            app:layout_constraintLeft_toLeftOf="@+id/textViewHourValue"
            app:layout_constraintStart_toEndOf="@+id/textViewHourValue"
            app:layout_constraintTop_toBottomOf="@+id/buttonIncreaseHour"/>
        <TextView
            android:textSize="20sp"
            android:textColor="@color/white"
            android:id="@+id/textViewMinutesValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/_zero"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/buttonIncreaseMin"
            app:layout_constraintStart_toStartOf="@+id/buttonIncreaseMin"
            app:layout_constraintTop_toBottomOf="@+id/buttonIncreaseMin"/>
        <Button
            android:id="@+id/buttonDecreaseHour"
            android:layout_width="81dp"
            android:layout_height="77dp"
            android:layout_marginTop="54dp"
            android:contentDescription="@string/minus_hour"
            android:drawableEnd="@drawable/decrease_time"
            android:layout_marginEnd="86dp"
            android:backgroundTint="#434343"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonIncreaseHour"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/buttonDecreaseMin"
            android:layout_width="81dp"
            android:layout_height="77dp"
            android:layout_marginTop="54dp"
            android:contentDescription="@string/minus_min"
            android:drawableEnd="@drawable/decrease_time"
            android:backgroundTint="#434343"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:layout_constraintStart_toEndOf="@+id/buttonDecreaseHour"
            app:layout_constraintTop_toBottomOf="@+id/buttonIncreaseMin"
            style="?android:attr/borderlessButtonStyle"/>
        <TextView
            android:textSize="20sp"
            android:textColor="#fdfcfc"
            android:id="@+id/textViewAmPm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/buttonIncreaseAm"
            app:layout_constraintStart_toStartOf="@+id/buttonIncreaseAm"
            app:layout_constraintTop_toBottomOf="@+id/buttonIncreaseAm"/>
        <Button
            android:id="@+id/buttonIncreaseAm"
            android:layout_width="81dp"
            android:layout_height="77dp"
            android:layout_marginTop="188dp"
            android:contentDescription="@string/am"
            android:drawableEnd="@drawable/increase_time"
            android:backgroundTint="#434343"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:layout_constraintStart_toEndOf="@+id/buttonIncreaseMin"
            app:layout_constraintTop_toTopOf="parent"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/buttonDecreasePm"
            android:layout_width="81dp"
            android:layout_height="77dp"
            android:layout_marginTop="54dp"
            android:contentDescription="@string/pm"
            android:drawableEnd="@drawable/decrease_time"
            android:backgroundTint="#434343"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:layout_constraintStart_toEndOf="@+id/buttonDecreaseMin"
            app:layout_constraintTop_toBottomOf="@+id/buttonIncreaseAm"
            style="?android:attr/borderlessButtonStyle"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
